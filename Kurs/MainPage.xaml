<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kurs.MainPage"
             Title="Главная">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Button x:Name="EmployeesButton" Text="Сотрудники" Clicked="OnEmployeesClicked"/>
        <Button x:Name="WorkTypesButton" Text="Виды работ" Clicked="OnWorkTypesClicked"/>
        <Button x:Name="AssignmentsButton" Text="Назначить работу" Clicked="OnAssignmentsClicked"/>
        <Button x:Name="SummaryButton" Text="Отчет" Clicked="OnSummaryClicked"/>
    </VerticalStackLayout>

</ContentPage>
