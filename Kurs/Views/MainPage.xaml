<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Kurs.ViewModels"
             x:Class="Kurs.Views.MainPage"
             Title="Главная">

    <ContentPage.BindingContext>
        <viewModels:MainPageViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="10">
        <HorizontalStackLayout HorizontalOptions="End" Padding="0,10">
            <Grid>
                <Image Source="bell.png"
                       WidthRequest="28"
                       HeightRequest="28"
                       VerticalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OpenNotificationsCommand}" />
                    </Image.GestureRecognizers>
                </Image>

                <Frame BackgroundColor="Red"
                       CornerRadius="10"
                       HeightRequest="20"
                       WidthRequest="20"
                       HorizontalOptions="End"
                       VerticalOptions="Start"
                       Padding="0"
                       IsVisible="{Binding HasNotifications}">
                    <Label Text="{Binding NotificationCount}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           FontSize="12"
                           TextColor="White"/>
                </Frame>
            </Grid>
        </HorizontalStackLayout>

        <Button x:Name="EmployeesButton" Text="Сотрудники" Clicked="OnEmployeesClicked"/>
        <Button x:Name="WorkTypesButton" Text="Виды работ" Clicked="OnWorkTypesClicked"/>
        <Button x:Name="AssignmentsButton" Text="Назначить работу" Clicked="OnAssignmentsClicked"/>
        <Button x:Name="SummaryButton" Text="Отчет" Clicked="OnSummaryClicked"/>
        <Button Text="Выйти" Clicked="OnLogoutClicked" BackgroundColor="Crimson" TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>
